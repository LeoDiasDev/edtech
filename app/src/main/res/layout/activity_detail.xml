<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/cover_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/title_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/cover_movie"
        app:layout_constraintTop_toTopOf="parent"
        android:text="TITULO DO FILME"/>

    <TextView
        android:id="@+id/year_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/title_movie"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="10dp"
        android:text="(2019)"/>

    <TextView
        android:id="@+id/date_release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/cover_movie"
        app:layout_constraintTop_toBottomOf="@+id/title_movie"
        android:text="07/02/2019"/>

    <TextView
        android:id="@+id/hifen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/date_release"
        app:layout_constraintTop_toBottomOf="@+id/title_movie"
        android:text=" - "/>

    <TextView
        android:id="@+id/genres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/hifen"
        app:layout_constraintTop_toBottomOf="@+id/title_movie"
        android:text=""/>

    <TextView
        android:id="@+id/overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@id/cover_movie"
        app:layout_constraintTop_toBottomOf="@+id/genres"
        android:text="Sinope: "/>

    <TextView
        android:id="@+id/overview_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/cover_movie"
        app:layout_constraintTop_toBottomOf="@+id/overview"
        android:text="ahsuiHAUIHDUIDHIUDHAUIHUIDS"/>

</androidx.constraintlayout.widget.ConstraintLayout>